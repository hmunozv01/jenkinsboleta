<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Socomap</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("styles", required: false)
    @RenderSection("scripts", required: false)

    <style type="text/css">
        body {
            padding-top: 75px;
        }

        .brand-logo {
            margin: 5px 5px 5px 0;
            max-height: 50px;
        }

        .modal-dialog .brand-logo {
            max-height: 38px;
            float: left;
        }
    </style>

    @*@Html.Partial("~/Views/Shared/_Common.cshtml")*@
</head>
<body>
    <div id="app">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Formulario", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })*@

                    <img class="brand-logo" src="~/Content/Images/logo_socovesa.png" style="max-height: 37px;">
                    <img class="brand-logo" src="~/Content/Images/logo_almagro.png" style="max-height: 37px;">
                    <img class="brand-logo" src="~/Content/Images/logo_pilares.jpg" style="max-height: 37px;">
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Inicio", "Index", "Main")</li>
                        @if (AuthHelper.Has("Usuarios"))
                        {

                            <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="container container-fluid body-content">
            @Html.Partial("~/Views/Shared/_FlashMessages.cshtml")
            @RenderBody()
        </div>
    </div>
</body>
</html>
